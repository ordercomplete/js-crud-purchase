<div class="field {{#if disabled}}field--disabled{{/if}}">
  <label for="{{name}}" class="field__label">{{label}}</label>
  <input type="{{#if type}}{{type}}{{else}}text{{/if}}" value="{{#if value}}{{value}}{{/if}}" name="{{name}}"
    class="field__input" {{#if required}}required{{/if}}>
  <label class="field__labelDown">{{labelDown}}</label>
</div>