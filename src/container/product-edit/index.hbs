{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class='main'>

  <div class='form'>
    <h1 class='form__title'>Редагування товару</h1>
    <form
      class='form__card'
      method='POST'
      action='/product-edit'
    >
      <h2>Інформація про товар</h2>
      <div class='form__content'>
        <div class='form__flex'>
          <div class='form__field'>
            <label for='name' class='form__label'>Назва
              товару</label>
            {{> capFirstLetter}}
            <input
              type='text'
              name='name'
              class='form__input form__name'
              value='{{product.name}}'
              oninput='capitalizeFirstLetter(this)'
              placeholder='Введіть назву товару'
            />
          </div>
          <div class='form__field'>
            <label for='price' class='form__label'>Ціна
            </label>
            <input
              type='number'
              name='price'
              class='form__input form__price'
              value='{{product.price}}'
              oninput="validity.valid||(value='');"
              placeholder='Введіть ціну'
            />
          </div>
          <div class='form__field form__flexwidth3'>
            <label for='id' class='form__label'>ID
            </label>
            <input
              type='number'
              name='id'
              class='form__input form__id'
              value='{{product.id}}'
              oninput="validity.valid||(value='');"
              placeholder='Введіть ID'
              readonly
            />
          </div>
        </div>
        <div class='form__field'>
          <label
            for='description'
            class='form__label'
          >Короткий опис продукту</label>
          {{> capFirstLetter}}
          <textarea
              type='text'
              name='description'
              class='form__input form__description'
              oninput='capitalizeFirstLetter(this)'>{{product.description}}</textarea>
          <label
            for='description'
            class='form__labelSmall'
          >Відображується у картці товару</label>
        </div>
        <div class='form__flex'>

          <button
            type='submit'
            class='form__button form__btnBlue'
          >Зберегти зміни</button>

          <button
            onclick="window.location.href='/product-copy?id=' + document.getElementsByName('id')[0].value"
            type='button'
            class='form__button form__btnGreen'
          >Копіювати товар</button>

          <button
            onclick="window.location.href='/product-delete?id=' + document.getElementsByName('id')[0].value"
            type='button'
            class='form__button form__btnRed'
          >Видалити товар</button>

        </div>

      </div>

    </form>

  </div>

</main>

